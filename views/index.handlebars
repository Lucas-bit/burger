<div class = "row">
  <div class = "col-sm-6">
    <h2 class = "created">Created Burgers</h2>

    <p class = "created" >
        {{#each burger_Data }}

        {{#unless this.devoured}}

          <li><button>{{this.id}}. Click to Eat {{this.burger_name}}</button></li>
        {{/unless}}


      {{/each}}
    </p>
  </div>

  <div class="col-sm-6">
    <h2 class = "devoured">Devoured Burgers</h2>

    <ul class = "devoured">
      {{#each burger_Data}}
          {{#if this.devoured}}
          <li>{{this.burger_name}}</li>
          {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


